#!/bin/bash

. ~/.bashrc

MAIL=mail.txt

ADDRESS=<%= @ds_mailfrom %>

USAGE=`df -k | grep /var/data | awk '{print $5}' | sed s/%//`

RET_VAL=0
if [ "$USAGE" -gt "80" ] ; then
    HOSTNAME=<%= @fqdn %>
    PROJECT=<%= @ds_name %>

    echo "/var/data on $HOSTNAME is currently using $USAGE% of disk space" > $MAIL

    AVAILABLE=`df -kh | grep /var/data | awk '{print $4}'`
    echo -e "\n$AVAILABLE space is now available" >> $MAIL

    /bin/mail -s "$PROJECT Disk Usage" $ADDRESS < $MAIL

    RET_VAL=$?

    if [ $RET_VAL -eq 0 ] ; then
        rm $MAIL
    else
        echo "$RET_VAL: Problem sending mail."
    fi
fi

exit $RET_VAL
