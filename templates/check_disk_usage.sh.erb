#!/bin/bash

. ~/.bashrc

MAIL=mail.txt

ADDRESS=<%= @ds_mailfrom %>
HOSTNAME=<%= @fqdn %>

USAGE=`df -k | grep /var/data | awk '{print $5}' | sed s/%//`

RET_VAL=0
if [ "$USAGE" -gt "80" ] ; then
    echo "/var/data on $HOSTNAME is currently using $USAGE% of disk space" >> $MAIL

    /bin/mail -s "DataShare Disk Usage" $ADDRESS < $MAIL

    RET_VAL=$?

    if [ $RET_VAL -eq 0 ] ; then
        rm $MAIL
    else
        echo "$RET_VAL: Problem sending mail."
    fi
fi

exit $RET_VAL
